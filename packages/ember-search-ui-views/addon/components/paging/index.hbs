<Containers::Paging @driver={{@driver}} as |state|>
  <ul class="rc-pagination sui-paging" unselectable="unselectable">
    <li
      class="{{if (eq state.current 1) "rc-pagination-disabled"}} rc-pagination-prev"
      title="Previous Page"
      aria-disabled={{if (eq state.current 1) "true"}}
      {{on "click" (fn this.prev state.onChange state.current state.totalPages)}}
    >
      <a class="rc-pagination-item-link"></a>
    </li>
		{{#each (range 1 state.totalPages) as |i|}}
			<li
				class="rc-pagination-item rc-pagination-item-{{i}} {{if (eq state.current i) " rc-pagination-item-active"}}"
				tabindex="0"
        {{on "click" (fn this.goTo state.onChange state.current i)}}
			>
				<a>{{i}}</a>
			</li>
		{{/each}}
		<li
      title="Next Page"
      aria-disabled="false"
      class="{{if (gte state.current state.totalPages) "rc-pagination-disabled"}} rc-pagination-next"
      {{on "click" (fn this.next state.onChange state.current state.totalPages)}}
    >
      <a class="rc-pagination-item-link"></a>
    </li>
  </ul>
</Containers::Paging>
  