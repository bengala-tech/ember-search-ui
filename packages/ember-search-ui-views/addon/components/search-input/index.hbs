<div class="sui-search-box__wrapper">
  <Input
    class={{concat
      "sui-search-box__text-input "
      (if @isFocused " focus ")
      @inputProps.class
    }}
    @value={{@value}}
    @placeholder={{@inputProps.placeholder}}
    {{on "input" @onChange}}
    {{on "keydown" @onOpen}}
    {{on "focus" @onFocus}}
    {{on "blur" @onBlur}}
    {{did-insert @didInsertInput}}
  />
</div>
<Input type="submit" class="button sui-search-box__submit" @value="Search" />