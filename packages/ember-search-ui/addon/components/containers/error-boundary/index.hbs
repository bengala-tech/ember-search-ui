<WithSearch
  @mapContextToProps={{map-context-to-props "error"}}
  @driver={{@driver}}
  as |state|
>
  {{#if @view}}
    {{#let (ensure-safe-component (component @view)) as |View|}}
      <View @error={{state.error}} ...attributes />
    {{/let}}
  {{else}}
    {{yield (hash error=state.error)}}
  {{/if}}
</WithSearch>